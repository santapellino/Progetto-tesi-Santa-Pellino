	<text type="minuta_di_lettera" xml:id="LL1.8" subtype="manuscript" n="LL1.8">
		<front></front>
		<body xml:lang="it">

			<pb n="1" xml:id="LL1.8_fol_1r" facs="#LL1.8_folio_1r"/> <!-- Fronte-recto -->

			<div type="letter-body" n="t_01">
				<salute  n="ab_01">
					<s type="sentence" n="s_01">
						<lb xml:id="LL1.8_lb_1r_01" n="1" facs="#LL1.8_line_1r_01"/>
						Mio caro <rs type="person">Amico</rs>
					</s>
				</salute>

				<ab type="parag" rend="first_line_indented" n="ab_02">
					<s type="sentence" n="s_02">
						<lb xml:id="LL1.8_lb_1r_02" n="2" facs="#LL1.8_line_1r_02"/>
						Tanto vi sono tenuto, perché vi <w>sie

						<lb xml:id="LL1.8_lb_1r_03" n="3" facs="#LL1.8_line_1r_03" break="no" rend="double stroke"/>
						te</w> incommodato a darmi <choice n='abr'><abbr>vre</abbr><expan>v<ex>ost</ex>re</expan></choice> nuove, come

						<lb xml:id="LL1.8_lb_1r_04" n="4" facs="#LL1.8_line_1r_04"/>
						anche <choice n='OriReg'><orig>pel</orig><reg resp="#EF">per il</reg></choice> subito recapito che
					</s>
				</ab>

				<ab type="parag" rend="first_line_indented" n="ab_03">   
					<s type="sentence" n="s_03"> 
						<lb xml:id="LL1.8_lb_1r_05" n="5" facs="#LL1.8_line_1r_05"/>
						<subst><del rend="overstrike">Tanto vi son tenuto</del><add place="supralinear">Vi sono assai<choice n='abr'><abbr>obblig</abbr><expan resp="#EF">obblig<ex>ato</ex></expan></choice></add></subst> per la <choice n='abr'><abbr>vra</abbr><expan>v<ex>ost</ex>ra</expan></choice> gentilissima
						
						<lb xml:id="LL1.8_lb_1r_06" n="6" facs="#LL1.8_line_1r_06"/>
						letterina tanto da me desiderata <choice><orig><del rend="overstrike">qui</del></orig><reg>qui</reg></choice> come prova che voi 

						<lb xml:id="LL1.8_lb_1r_07" n="7" facs="#LL1.8_line_1r_07"/>
						<subst> <del rend="overstrike">vi ricordaste di me ancora</del><add place="inline"> non mi dimenticaste.</add></subst> 
					</s>
					<s type="sentence" n="s_04">
						I miei
						
						<lb xml:id="LL1.8_lb_1r_08" n="8" facs="#LL1.8_line_1r_08"/>
						parenti mi scrissero da <placeName ref="TEI-ListPlace.xml#CT">Catania</placeName> <subst> <del rend="overstrike">che hanno</del> <del rend="overstrike">da</del>
						
						<lb xml:id="LL1.8_lb_1r_9" n="9" facs="#LL1.8_line_1r_09"/>
						<del rend="overstrike">voi</del><add place="inline"> che <choice n='OriReg'><orig>han</orig><reg resp="#MFR">hanno</reg></choice> ricevuto</add></subst> i <term subtype="other-term">ritratti,</term> che vi pregai di
						
						<lb xml:id="LL1.8_lb_1r_10" n="10" facs="#LL1.8_line_1r_10"/>
						<choice n='SiCorr'><sic>recapitargli</sic><corr resp="#EF">recapitare loro</corr></choice> e ve ne sono tenuto per la premura
						
						<lb xml:id="LL1.8_lb_1r_11" n="11" facs="#LL1.8_line_1r_11"/>
						vostra.
					</s>
					<s type="sentence" n="s_05">
						La mia salute è sana, e di già <subst><del rend="overstrike">ho</del>
						<lb xml:id="LL1.8_lb_1r_12" n="12" facs="#LL1.8_line_1r_12"/>
						<del rend="overstrike">intrapreso la nuova fattiga,</del><add place="inline"> sono applicato</add></subst>

						<pb n="2" xml:id="LL1.8_fol_1v" facs="#LL1.8_folio_1v"/>

						<lb xml:id="LL1.8_lb_1v_01" n="1" facs="#LL1.8_line_1v_01"/>
						alla nuova <rs type="work" ref="TEI-ListWork.xml#Norma" resp="#EC"><term subtype="music-term" ref="TEI-ListTerm.xml#opera">opera</term></rs> che deve darsi alla <orgName type="theatre" ref="TEI-ListOrganization.xml#Scala">Scala</orgName>
						
						<lb xml:id="LL1.8_lb_1v_02" n="2" facs="#LL1.8_line_1v_02"/>
						<choice n="OriReg"><orig>pel</orig><reg resp="#EF">per il</reg></choice> <date when="1831-12-26">26<am>:</am> di <choice n="OriReg"><orig>Decembre</orig><reg resp="#MFR">Dicembre</reg></choice> prossimo</date>: 
					</s> 
					<s type="sentence" n="s_06"><del rend="overstrike">essa porta</del>
						<lb xml:id="LL1.8_lb_1v_03" n="3" facs="#LL1.8_line_1v_03"/>
						<del rend="overstrike">per ti è la poesia</del> Il soggetto è <rs type="work" ref="TEI-ListWork.xml#Norma_tragedia" resp="#EC"><hi rend="underline">Norma</hi></rs>
						
						<lb xml:id="LL1.8_lb_1v_04" n="4" facs="#LL1.8_line_1v_04"/>
						<term subtype="music-term" ref="TEI-ListTerm.xml#tragedia_lirica">tragedia</term> di <foreign xml:id="fr"><choice n='abr'><abbr>M<am>:</am><g rend="smaller">r</g></abbr><expan>M<ex>onsieu</ex>r</expan></choice></foreign><persName ref="TEI-ListPerson.xml#AS" role="composer">Soumet:</persName> io la trovo <w>interes
						
						<lb xml:id="LL1.8_lb_1v_05" n="5" facs="#LL1.8_line_1v_05" break="no" rend="double stroke"/>
						sante</w> e se <persName ref="TEI-ListPerson.xml#FR" role="librettist">Romani</persName> ne ricaverà una bella
						
						<lb xml:id="LL1.8_lb_1v_06" n="6" facs="#LL1.8_line_1v_06"/>
						poesia potrà venire un bel <term subtype="music-term" ref="TEI-ListTerm.xml#libretto"><hi rend="underline">libretto;</hi></term>
					</s>
					<s type="sentence" n="s_07">ma
						<lb xml:id="LL1.8_lb_1v_07" n="7" facs="#LL1.8_line_1v_07"/>
						questa volta temo che la mia vena m'<w>ab
						
						<lb xml:id="LL1.8_lb_1v_08" n="8" facs="#LL1.8_line_1v_08" break="no" rend="double stroke"/>
						bandoni</w> perché la testa è divagata da quel
						
						<lb xml:id="LL1.8_lb_1v_09" n="9" facs="#LL1.8_line_1v_09"/>
						maledettissimo <hi rend="italic"><choice n="OriReg"><orig>Cholera</orig><reg resp="#MFR">colera</reg></choice></hi> che minaccia tutta <w>Euro
						
						<lb xml:id="LL1.8_lb_1v_10" n="10" facs="#LL1.8_line_1v_10" break="no" rend="double stroke"/>
						pa:</w> Basta.
					</s> 
					<s type="sentence" n="s_08"> Aspettiamone la fine.</s>
					<s type="sentence" n="s_09">Riceverete
						<lb xml:id="LL1.8_lb_1v_11" n="11" facs="#LL1.8_line_1v_11"/>
						i miei saluti e <choice n='abr'><abbr>cred<am>:<g rend="superscript">mi</g></am></abbr><expan resp="#EF">cred<ex>et</ex>emi</expan></choice> a tutte prove
					</s> 
				</ab>
			</div>

			<div type="closer" n="c_01">
				<salute n="ab_05">
					<s type="sentence" n="s_10">
						<lb xml:id="LL1.8_lb_1v_12" n="12" facs="#LL1.8_line_1v_12"/>
						<rs type="person" ref="TEI-ListPerson.xml#VB" role="composer"><hi rend="align(right)">Vostro</hi></rs>
					</s>
				</salute>
			</div>

